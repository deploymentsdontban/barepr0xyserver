{
  "version": 2,
  "builds": [
    {
      "src": "src",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "dist/index.html"
    },
    {
      "src": "/api/*",
      "dest": "dist/api/index.py"
    }
  ],
  "functions": [
    {
      "src": "dist/api/index.py",
      "use": "@vercel/python-function",
      "config": {
        "handler": "main.handler"
      }
    }
  ]
}
